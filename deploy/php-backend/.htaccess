# Configuraci칩n para el backend PHP
RewriteEngine On

# Permitir CORS
# Configurar CORS din치micamente
SetEnvIf Origin "^https://fungusmycelium\.cl$" CORS_ORIGIN=$0
SetEnvIf Origin "^http://localhost:8080$" CORS_ORIGIN=$0
Header always set Access-Control-Allow-Origin "%{CORS_ORIGIN}e" env=CORS_ORIGIN
Header always set Access-Control-Allow-Origin "http://localhost:8080" "expr=-z %{CORS_ORIGIN}"
Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
Header always set Access-Control-Allow-Headers "Content-Type, Authorization"
Header always set Access-Control-Allow-Credentials "true"

# Manejar preflight requests
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# Permitir acceso directo a archivos en la carpeta uploads
RewriteCond %{REQUEST_URI} ^/uploads/
RewriteRule ^(.*)$ - [L]

# Redirigir todas las rutas al index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [QSA,L]

# Configuraci칩n de seguridad
<Files ".env">
    Order allow,deny
    Deny from all
</Files>

<Files "*.log">
    Order allow,deny
    Deny from all
</Files>

# Configuraci칩n PHP
php_value display_errors Off
php_value log_errors On
php_value error_log logs/php_errors.log